@model DataDecipher.WebApp.Models.Organization

@{
    Layout = "_MainLayout"; 
}
<div class="container-fluid">
    <h5>New Organization</h5>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class=form-group>
                    <label asp-for="SelectedPlanId" class="control-label"></label>
                    @Html.DropDownListFor(s=>s.SelectedPlanId, new SelectList(ViewBag.Plans, "Id", "Name"), "", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </div>
