@model IEnumerable<DataDecipher.WebApp.Models.Organization>
@{
    Layout = "_MainLayout"; ;
}
<div class="container-fluid">
    <h5> List of all the organizations</h5>
    <p>The following table displays all the organizations. You can create, edit, delete and view details about the organizations using this screen</p>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="myTable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SelectedPlan)
                </th>
                <th>
                    No of users
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelectedPlan.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.Count)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
                }
        </tbody>
    </table>
 </div>
