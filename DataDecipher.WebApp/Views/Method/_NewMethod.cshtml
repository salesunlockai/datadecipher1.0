@model DataDecipher.WebApp.Models.MethodViewModel

@using Microsoft.AspNetCore.Http.Features
@{
    @using(Html.BeginForm())
    {
            <div id="method" class="container-fluid">
                <div class="row>">
                    <div class="col-md-4">
                        <h6>1. Define your method</h6>
                        <br />
                    </div>
                </div>
                <div class="row>">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Name" class="badge badge-default-noborder"></label>
                            <input type="text" asp-for="Name" placeholder="Your method name" class="form-control"/>
                            <span asp-validation-for="Name" class="badge badge-danger-noborder"></span>
                        </div>
                    </div>
                </div>
                <div class="row>">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Description" class="badge badge-default-noborder"></label>
                            <textarea asp-for="Description" placeholder="Little bit more about your method goes here" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                </div>
                <input asp-controller="Method" asp-action="Create" class="btn btn-primary" type="submit" value="Save" />
            </div>
      }
}
