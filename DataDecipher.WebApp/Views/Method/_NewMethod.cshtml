@model DataDecipher.WebApp.Models.Method
<form asp-controller="Method" asp-action="Create" data-ajax="true" data-ajax-method="POST">               
    <div class="container-fluid">
        <div class="row>">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name" class="badge badge-default-noborder"></label>
                    <input type="text" asp-for="Name" placeholder="Your method name" class="form-control" />
                    <span asp-validation-for="Name" class="badge badge-danger-noborder"></span>
                </div>
            </div>
        </div>
        <div class="row>">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Description" class="badge badge-default-noborder"></label>
                    <textarea asp-for="Description" placeholder="Little bit more about your method goes here" class="form-control" rows="5"></textarea>
                </div>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
</form>         
      

