@model DataDecipher.WebApp.Models.DataSource
<div class="card">
    <div class="card-header">
        <span class="text-primary">Create a new datasource</span>
    </div>
    <div class="card-body">
        <form id="frmDsUpload" asp-controller="DataSources" asp-action="Create" method="Post" enctype="multipart/form-data">
            <div class="row>">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Name" class="badge badge-default-noborder"></label>
                        <input type="text" asp-for="Name" placeholder="Your data source name" class="form-control" />
                        <span asp-validation-for="Name" class="badge badge-danger-noborder"></span>
                    </div>
                </div>
            </div>
            <div class="row>">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Description" class="badge badge-default-noborder"></label>
                        <textarea asp-for="Description" placeholder="Little bit more about your data source goes here" class="form-control" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="row>">
                <div class="col">
                    <div class="form-group">
                        <input class="file btn-primary btn-simple" type="file" name="DataFile" />
                    </div>
                </div>
            </div>
            <div class="row>">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="TypeId" class="badge badge-default-noborder"></label>
                        @Html.DropDownListFor(s => s.TypeId, new SelectList(ViewBag.AvailableDataConnectors, "Id", "Name"), "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div id="CreateDSFooter">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
<script>
    var createdsfooter = $("#CreateDSFooter");
    var onNewDSComplete = function() {
        createdsfooter.html("<div class=\"alert alert-success\" role=\"alert\"><div class=\"container-fluid\"><div class=\"alert-icon\"><i class=\"now-ui-icons ui-2_like\"></i></div>New datasource created successfully.<button type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-label=\"Close\"><span aria-hidden=\"true\"><i class=\"now-ui-icons ui-1_simple-remove\"></i></span></button></div></div>");
        $.ajax({
                url: '/Main/DisplayDataSource',
                type: 'GET',
                datatype: 'text',
                contentType: 'application/x-www-form-urlencoded',
                success: function(content) {
                    $('#DisplayDataSource').html(content);
                },
                error: function(e) { }
            });
    };

$("#frmDsUpload").submit(function(event) {

        /* stop form from submitting normally */
        event.preventDefault();
        /* get the action attribute from the <form action=""> element */
        var $form = $(this),
            url = $form.attr('action');

        createdsfooter.html("<span class=\"text - primary\">Creating datasource please wait...</span>");
        var myForm = document.getElementById('frmDsUpload');

        var formdata = new FormData(myForm);

            $.ajax({
                url: '@Url.Action("Create", "DataSources")',
                type: 'POST',
                data: formdata,
                processData: false,
                contentType: false,
                complete : onNewDSComplete

            })



});
</script>